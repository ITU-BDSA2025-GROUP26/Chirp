<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1>
        <a asp-page="/Public"
           aria-label="Go to Public Timeline (home)"
           style="text-decoration:none; color:inherit; display:inline-flex; align-items:center; gap:.25em;">
            <img src="/images/icon1.png" alt="" />
            <span>Chirp!</span>
        </a>
    </h1>

    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>