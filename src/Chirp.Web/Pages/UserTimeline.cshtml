@page "/{author}"
@using Chirp.Core.Models
@model Chirp.Razor.Pages.UserTimelineModel

@inject UserManager<Author> UserManager
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    
    var currentUser = UserManager.GetUserAsync(HttpContext.User).Result;
    
    var routeName = RouteData.Values["author"] as string;


    var pageParam = Request.Query["page"].ToString();
    var currentPage = int.TryParse(pageParam, out var parsedPage) && parsedPage > 0
        ? parsedPage
        : 1;

    var prevPage = currentPage > 1 ? currentPage - 1 : 1;
    var nextPage = currentPage + 1;
}

<h2>@routeName's Timeline</h2>
<partial name="_LoginPartial" />

@if (User.Identity?.IsAuthenticated == true &&
     string.Equals(User.Identity!.Name, routeName ?? string.Empty, StringComparison.OrdinalIgnoreCase))
{
    <div class="cheepbox">
        <h3>What's on your mind @User.Identity!.Name?</h3>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="text" asp-for="Text" maxlength="160" />
            <span asp-validation-for="Text" class="text-danger"></span>
            <button type="submit">Share</button>
        </form>
    </div>
}

@if (Model.Cheeps.Any())
{
    <ul id="messagelist" class="cheeps">
        @foreach (var cheep in Model.Cheeps)
        {
            <li>
                <p>
                    <strong><a href="/@cheep.Author">@cheep.Author</a></strong>
                    @if (User.Identity?.IsAuthenticated ?? true)
                    {
                        System.Diagnostics.Debug.Assert(currentUser != null, nameof(currentUser) + " != null");
                        if (currentUser.UserName != cheep.Author && currentUser.Following.All(f => f.FollowerId != cheep.Author))
                        {
                            <button onclick="@{Model.OnFollow(currentUser,cheep.Author);};" type="submit">Follow</button>
                        }
                        else if (currentUser.UserName != cheep.Author && currentUser.Following.Any(f => f.FollowerId == cheep.Author))
                        {
                            <button onclick="@{ Model.OnUnFollow(currentUser, cheep.Author); };" type="submit">Unfollow</button>
                        }
                    }
                    @cheep.Text
                    <small>&mdash; @cheep.TimeStamp</small>
                </p>
            </li>
        }
    </ul>
}
else
{
    <em>There are no cheeps so far.</em>
}

<div class="pagination" style="margin-top: 20px;">
    @if (currentPage > 1)
    {
        <a href="/@routeName?page=@prevPage" class="btn btn-secondary">Previous</a>
    }
    <a href="/@routeName?page=@nextPage" class="btn btn-primary">Next</a>
    <span style="margin-left:10px;">Page @currentPage</span>
</div>